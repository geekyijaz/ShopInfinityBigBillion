<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/flip_sbi_bigb"
            android:id="@+id/imageFlipBanner" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="90dp" >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/sd_logo"
            android:id="@+id/imagesnapDeal" />
    </TableRow>

    <ImageView
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/flipkart_logo"
        android:id="@+id/imageFlip"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/amazon_logo"
        android:id="@+id/imageAmazon" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/amazon_bigbillion"
        android:id="@+id/imageAmzBigB" />



</LinearLayout>